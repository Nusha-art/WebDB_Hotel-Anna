@page
@model Hotel_Anna_.Pages.Room.DeleteModel

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить комнату?</h3>
<div>
    <h4>Комната</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms.Appellation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rooms.Appellation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rooms.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rooms.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rooms.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rooms.Employee)
        </dt>
        <dd class="col-sm-10">
            @{ if (Model.Employee != null)
                {
                    @Model.Employee.FIO }
                else
                {
                    <p>нет</p> } }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Rooms.ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться обратно</a>
    </form>
</div>
