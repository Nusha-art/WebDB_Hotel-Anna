@page
@model Hotel_Anna_.Pages.Service.CreateModel

@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавить</h1>

<h4>Услуга</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Services.Appellation" class="control-label"></label>
                <input asp-for="Services.Appellation" class="form-control" />
                <span asp-validation-for="Services.Appellation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Services.Description" class="control-label"></label>
                <input asp-for="Services.Description" class="form-control" />
                <span asp-validation-for="Services.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Services.Price" class="control-label"></label>
                <input asp-for="Services.Price" class="form-control" />
                <span asp-validation-for="Services.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
