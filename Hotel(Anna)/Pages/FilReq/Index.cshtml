@page
@model Hotel_Anna_.Pages.FilReq.IndexModel
@{
}
<script>
    function BtnFun(ClassName, obj) {
        var value = obj.value;
        var name = "." + ClassName;
        if (value[0] != "-") {
            $(name).prop('disabled', false);
        }
        else {
            $(name).prop('disabled', true);
        }
    }
</script>
<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link text-dark" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Запросы
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                <ul>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="Request/PerDep">Отдел кадров</a></li>
                </ul>
            </div>
            <div class="card-body">
                <ul>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="Request/Nomer">Номера</a></li>
</ul>
            </div>
            <div class="card-body">
                <ul>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="Request/Klient">Клиенты</a></li>
</ul>
            </div>
            
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed text-dark" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Фильтры
                </button>
            </h5>
        </div>
        <div class="card-body">

            <form>
                Фильтр сотрудников по должности:
                <select asp-items="Model.SelPosition" name="id" class="form-control-sm" onclick="BtnFun('FilPos', this)">
                    <option value="-1">не выбран</option>
                </select>
                <button asp-page="Filter/FilterPos" class="btn btn-primary FilPos" disabled>Отфильтровать</button>
            </form>

        </div>
        <div class="card-body">

            <form>
                Фильтры для отображения клиентов проживающих в разных номерах:
                <select asp-items="Model.SelNom" name="ro" class="form-control-sm" onclick="BtnFun('FilNom', this)">
                    <option value="-1">не выбран</option>
                </select>
                <button asp-page="Filter/FilNom" class="btn btn-primary FilNom" disabled>Отфильтровать</button>
            </form>

        </div>
        <div class="card-body">

            <form>
                Вместимость номеров:
                <select asp-items="Model.SelVmest" name="vm" class="form-control-sm" onclick="BtnFun('FilVmes', this)">
                    <option value="-1">не выбран</option>
                </select>
                <button asp-page="Filter/FilVmest" class="btn btn-primary FilVmes" disabled>Отфильтровать</button>
            </form>

        </div>
    </div>
</div>