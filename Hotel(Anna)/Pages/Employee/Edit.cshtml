@page
@model Hotel_Anna_.Pages.Employee.EditModel

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.ID" />
            <div class="form-group">
                <label asp-for="Employee.Age" class="control-label"></label>
                <input asp-for="Employee.Age" class="form-control" />
                <span asp-validation-for="Employee.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Gender" class="control-label"></label>
                <input asp-for="Employee.Gender" class="form-control" />
                <span asp-validation-for="Employee.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Passport_data" class="control-label"></label>
                <input asp-for="Employee.Passport_data" class="form-control" />
                <span asp-validation-for="Employee.Passport_data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Address" class="control-label"></label>
                <input asp-for="Employee.Address" class="form-control" />
                <span asp-validation-for="Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.FIO" class="control-label"></label>
                <input asp-for="Employee.FIO" class="form-control" />
                <span asp-validation-for="Employee.FIO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Telephone" class="control-label"></label>
                <input asp-for="Employee.Telephone" class="form-control" />
                <span asp-validation-for="Employee.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PositionID" class="control-label"></label>
                <input asp-for="Employee.PositionID" class="form-control" />
                <span asp-validation-for="Employee.PositionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
