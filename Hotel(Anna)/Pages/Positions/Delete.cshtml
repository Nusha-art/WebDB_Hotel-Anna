    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Positions.Name_of_the_position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Positions.Name_of_the_position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Positions.Duties)
        </dt>
