@page
@model Hotel_Anna_.Pages.Positions.EditModel

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Должность</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Positions.ID" />

            <div class="form-group">
                <label asp-for="Positions.Name_of_the_position" class="control-label"></label>
                <input asp-for="Positions.Name_of_the_position" class="form-control" />
                <span asp-validation-for="Positions.Name_of_the_position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Positions.Duties" class="control-label"></label>
                <input asp-for="Positions.Duties" class="form-control" />
                <span asp-validation-for="Positions.Duties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Positions.Salary" class="control-label"></label>
                <input asp-for="Positions.Salary" class="form-control" />
                <span asp-validation-for="Positions.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Positions.Requirements" class="control-label"></label>
                <input asp-for="Positions.Requirements" class="form-control" />
                <span asp-validation-for="Positions.Requirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
